<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="8dp"/>
            <stroke
                android:color="@color/blue"
                android:width="1dp" />

            <solid android:color="#FFFFFF" />

        </shape>
    </item>
    <item
        android:gravity="center_vertical|right"
        android:top="5dp"
        android:left="5dp"
        android:right="8dp">
        <layer-list>
            <item
                android:width="12dp"
                android:height="12dp"
                android:bottom="10dp"
                android:gravity="center">
                <rotate
                    android:fromDegrees="45"
                    android:toDegrees="45">
                    <shape android:shape="rectangle">
                        <!--                        <solid android:color="#" />-->
                        <solid
                            android:width="1dp"
                            android:color="@color/blue" />
                    </shape>
                </rotate>
            </item>
            <item
                android:width="30dp"
                android:height="10dp"
                android:bottom="21dp"
                android:gravity="center">
                <shape android:shape="rectangle">
                    <solid android:color="#FFFFFF" />
                </shape>
            </item>
        </layer-list>
    </item>

</layer-list>